
<process id="my.proc1"
         initiation="message"
         xmlns="werkflow:basic"
         xmlns:j="jelly:core"
         xmlns:java="jelly:com.werken.werkflow.semantics.java.JavaTagLibrary"
         xmlns:jelly="jelly:com.werken.werkflow.semantics.jelly.JellyTagLibrary">


<!--
