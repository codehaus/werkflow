<project>
    <pomVersion>3</pomVersion>
    <name>Werkflow Tagalog</name>
    <groupId>werkflow</groupId>
    <artifactId>werkflow-tagalog</artifactId>
    <currentVersion>2.0-alpha-1</currentVersion>
    <organization>
        <name>The Codehaus</name>
        <url>http://www.codehaus.org</url>
        <logo>http://www.codehaus.org/codehaus-small.png</logo>
    </organization>

    <inceptionYear>2004</inceptionYear>

    <package>org.codehaus.werkflow.tagalog</package>

    <dependencies>
        <dependency>
            <groupId>werkflow</groupId>
            <artifactId>werkflow</artifactId>
            <version>2.0-alpha-1</version>
        </dependency>
        <dependency>
            <groupId>tagalog</groupId>
            <artifactId>tagalog-core</artifactId>
            <version>0.2-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>tagalog</groupId>
            <artifactId>tagalog-script</artifactId>
            <version>0.2-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>tagalog</groupId>
            <artifactId>tagalog-el-ognl</artifactId>
            <version>0.2-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ognl</groupId>
            <artifactId>ognl</artifactId>
            <version>2.6.7</version>
        </dependency>
    </dependencies>

    <build>
        <nagEmailAddress>scm@werkflow.codehaus.org</nagEmailAddress>
        <sourceDirectory>src/main/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>

        <!-- Unit test classes -->

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
