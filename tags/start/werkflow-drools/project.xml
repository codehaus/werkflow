<project>
    <pomVersion>3</pomVersion>
    <name>Werkflow Drools</name>
    <groupId>werkflow</groupId>
    <artifactId>werkflow-drools</artifactId>
    <currentVersion>2.0-alpha-1</currentVersion>
    <organization>
        <name>The Codehaus</name>
        <url>http://www.codehaus.org</url>
        <logo>http://www.codehaus.org/codehaus-small.png</logo>
    </organization>

    <inceptionYear>2001</inceptionYear>

    <package>org.codehaus.werkflow.drools</package>

    <dependencies>
        <dependency>
            <groupId>werkflow</groupId>
            <artifactId>werkflow</artifactId>
            <version>2.0-alpha-1</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>2.0-beta-17</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>2.0-beta-17</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-java</artifactId>
            <version>2.0-beta-17</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
        </dependency>
    </dependencies>

    <build>
        <nagEmailAddress>scm@drools.codehaus.org</nagEmailAddress>
        <sourceDirectory>src/main/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>

        <!-- Unit test classes -->

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
